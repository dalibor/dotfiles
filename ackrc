--ignore-dir=tmp
--ignore-dir=.git
--type-set=IGNORE=.svg
--noIGNORE

# lexically sort filenames
--sort-files

# --type-add=ruby=rake,haml
--type-add=ruby=.haml,.gems,.rdoc,.sass,.feature,.spec,.rake,.md
--type-add=vim=vimrc
--type-add=js=json
--type-set=css=sass
--type-set=css=scss
--type-set=html=erb

# add types ack doesn't know about
--type-set=MARKDOWN=md,mkd,markdown
--type-set=RDOC=rdoc
--type-set=bin=.pdf
